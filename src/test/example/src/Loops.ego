import {
	std {
		io {
			print
		}
		math::Random
	}
}

loopTest() {
	// infinite loop
	loop {
		// break out of loop
		break;
	}

	var n = 10;
	// loop n times, i is the iteration number from 0
	loop n; i {
		print(i);
	}

	mut var array = [1, 2, 3, 4, 5]

	// readonly reference
	for item in @array; i {
		print(i, item);
	}

	// mutable reference
	for item in @mut array {
		item = 10;
	}
	// array = [10, 10, 10, 10, 10] 
	print(array);

	// copy
	for item in array {
		item = 10;
		print(item);
	}

	// default constructed random
	var random = math::Random();

	while random.double() < 0.5 {}

	do {
  } while random.double() < 0.5
}
